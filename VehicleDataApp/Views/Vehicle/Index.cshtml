@{
    ViewData["Title"] = "Vehicle Data";
}

@model Vehicle

<div class="float-container">
    <div class="float-child">
        @if (Model.Make != null)
        {
            @switch (Model.Make.ToLower())
            {
                case "acura":
                    <img src="https://assets.stickpng.com/images/580b57fcd9996e24bc43c467.png" alt="acura pic">
                    break;
                case "audi":
                    <img src="https://www.carlogos.org/car-logos/audi-logo-1985-show.png" alt="condition pic">
                    break;
                case "buick":
                    <img src="https://www.carlogos.org/logo/Buick-logo-2002-640x200.jpg" alt="condition pic">
                    break;
                case "bmw":
                    <img src="https://www.carlogos.org/car-logos/bmw-logo-1997-1200x1200-show.png" alt="bmw pic">
                    break;
                case "cadillac":
                    <img src="https://www.pngall.com/wp-content/uploads/2016/05/Cadillac-Logo-Free-Download-PNG.png" alt="cadillac pic">
                    break;
                case "chevrolet":
                    <img src="https://www.carlogos.org/logo/Chevrolet-logo-2013-2560x1440.png" alt="chevy pic">
                    break;
                case "dodge":
                    <img src="https://www.carlogos.org/logo/Dodge-logo-1990-2100x2100.png" alt="dodge pic">
                    break;
                case "ford":
                    <img src="https://www.carlogos.org/car-logos/ford-logo-2017.png" alt="ford pic">
                    break;
                case "gmc":
                    <img src="https://www.carlogos.org/logo/GMC-logo-640x145.jpg" alt="gmc pic">
                    break;
                case "honda":
                    <img src="https://www.carlogos.org/car-logos/honda-logo-1700x1150.png" alt="honda pic">
                    break;
                case "infiniti":
                    <img src="https://www.carlogos.org/logo/Infiniti-logo-1989-640x308.jpg" alt="infiniti pic">
                    break;
                case "jeep":
                    <img src="https://www.carlogos.org/car-logos/jeep-logo-1993.png" alt="jeep pic">
                    break;
                case "kia":
                    <img src="https://www.carlogos.org/logo/Kia-logo-640x321.jpg" alt="kia pic">
                    break;
                case "land-rover":
                    <img src="https://www.carlogos.org/logo/Land-Rover-logo-2011-640x335.jpg" alt="land-rover pic">
                    break;
                case "lexus":
                    <img src="https://www.carlogos.org/logo/Lexus-logo-1988-640x266.jpg" alt="lexus pic">
                    break;
                case "mazda":
                    <img src="https://www.carlogos.org/logo/Mazda-logo-1997-1920x1080.png" alt="mazda pic">
                    break;
                case "mercedes-benz":
                    <img src="https://www.carlogos.org/logo/Mercedes-Benz-logo-2011-1920x1080.png" alt="mercedes-Benz pic">
                    break;
                case "mitsubishi":
                    <img src="https://www.carlogos.org/logo/Mitsubishi-logo-640x550.jpg" alt="mitsubishi pic">
                    break;
                case "nissan":
                    <img src="https://www.carlogos.org/car-logos/nissan-logo-2013-700x700-show.png" alt="nissan pic">
                    break;
                case "subaru":
                    <img src="https://www.carlogos.org/car-logos/subaru-logo-2003.png" alt="subaru pic">
                    break;
                case "toyota":
                    <img src="https://seeklogo.com/images/T/toyota-logo-239F6C9C1A-seeklogo.com.png" alt="toyota pic">
                    break;
                case "volkswagen":
                    <img src="https://www.freepnglogos.com/uploads/vw-png-logo/pulman-volkswagen-new-pulman-motor-group-png-logo-3.png" alt="volkswagen pic">
                    break;

            }


        }
        else
        {
            <div><img src="https://i.pinimg.com/736x/ab/68/a8/ab68a8fd4c38d3c3f0326df692c5e90c.jpg" alt="condition pic"></div>
        }

    </div>

    <div class="float-child">
        <div>
            <h1 class="display-4"><strong>Get Vehicle Data</strong></h1>
            <p>Enter your 17 character VIN below to get the vehicle data.</p>
            <div>
                @using (Html.BeginForm("Index", "Vehicle", FormMethod.Get))
                {
                    <div class="form-group">
                        <input type="text" name="VIN" class="form-control text-center" maxlength="17" />
                    </div>
                    <br />

                    <input type="submit" value="Enter" class="btn btn-primary btn-lg" />
                }
            </div>
        </div>
    </div>
</div>
<br />
<div>



    <div>
        <table id="VehicleSpecs" class="table table-striped table-bordered">
            <tr>
                <th><strong>VIN:</strong></th>
                <td>@Model.VIN<br /></td>
            </tr>
            <tr>
                <th><strong>Year:</strong></th>
                <td>@Model.Year<br /></td>
            </tr>
            <tr>
                <th><strong>Make:</strong></th>
                <td>@Model.Make<br /></td>
            </tr>
            <tr>
                <th><strong>Model:</strong></th>
                <td>@Model.Model<br /></td>
            </tr>
            <tr>
                <th><strong>Trim:</strong></th>
                <td>@Model.Trim<br /></td>
            </tr>
            <tr>
                <th><strong>Style:</strong></th>
                <td>@Model.Style<br /></td>
            </tr>
            <tr>
                <th><strong>Engine:</strong></th>
                <td>@Model.Engine<br /></td>
            </tr>
            <tr>
                <th><strong>City MPG:</strong></th>
                <td>@Model.CityMileage<br /></td>
            </tr>
            <tr>
                <th><strong>Highway MPG:</strong></th>
                <td>@Model.HighwayMileage<br /></td>
            </tr>
            <tr>
                <th><strong>Curb Weight:</strong></th>
                <td>@Model.CurbWeight<br /></td>
            </tr>

        </table>
    </div>
</div>

<div class= "align-content-center">
    @if (Model.Make != null)
{
    <a href="@($"https://www.google.com/search?q={@Model.Year}+{@Model.Make}+{@Model.Model}+for+sale+near+me")" class="btn btn-primary btn-lg" role="button">This Vehicle for sale near you</a>

    <a href="@($"https://www.kbb.com/{@Model.Make}/{@Model.Model}/{@Model.Year}/")" class="btn btn-primary btn-lg" role="button">This Vehicle on Kelly Blue Book</a>

    <a href="@($"https://www.edmunds.com/{@Model.Make}/{@Model.Model}/{@Model.Year}/review/")" class="btn btn-primary btn-lg" role="button">This Vehicle's review on Edmunds</a>
}
else
{
}
</div>
